<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - Doctor-Patient Interface</title>
    <style>
        /* Global Styling */
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #abdded, #92e1e9);
            scroll-behavior: smooth;
            overflow: hidden; /* Disable scrolling initially */
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        .navbar {
            width: 100%;
            background-color: #000; /* Black navbar */
            padding: 10px 20px;
            display: flex;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            box-sizing: border-box;
            position: fixed; /* Fixed navbar */
        }

        .navbar-logo {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .navbar-logo img {
            height: 50px; /* Logo image size */
            margin-right: 15px;
        }

        .navbar-logo span {
            font-size: 24px;
            color: white;
            font-weight: bold;
            transition: transform 0.3s ease, color 0.3s ease, text-shadow 0.3s ease;
        }

        .navbar-logo:hover span {
            color: #a4d2ff; /* Beautiful Dodger Blue */
            text-shadow: 0 4px 12px rgba(30, 144, 255, 0.7); /* Blue Glow */
        }

        /* Button Styling */
        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 30px;
            background: linear-gradient(145deg, #1E90FF, #4682B4);
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
            margin-top: 20px; /* Proper spacing from input fields */
        }

        .btn:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 0 12px 25px rgba(30, 144, 255, 0.4);
            background: linear-gradient(145deg, #4682B4, #1E90FF);
        }

        /* Forgot Password Form */
        .forgot-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1; /* Center content without scrolling */
            margin-top: 60px; /* Push form below navbar */
        }

        .forgot-form {
            background: rgba(255, 255, 255, 0.9);
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
            animation: fadeIn 0.8s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Left-aligned Heading and Labels */
        h2 {
            color: #1a1a1a;
            font-size: 2rem;
            margin-bottom: 2rem;
            text-align: center; /* Left-align heading */
        }

        label {
            display: block;
            margin: 20px 0 10px;
            font-size: 1rem;
            color: #333;
            text-align: left; /* Left-align labels */
        }

        /* Input and Select Styling */
        select,
        input {
            width: 100%;
            padding: 12px;
            border-radius: 10px;
            border: 1px solid #bbb;
            font-size: 1rem;
            transition: box-shadow 0.3s;
        }

        input:focus,
        select:focus {
            outline: none;
            box-shadow: 0 0 15px rgba(30, 144, 255, 0.5);
            transform: scale(1.02);
        }

        /* Center the button below fields */
        .btn-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        /* Hide sections initially */
        .hidden {
            display: none;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-logo" id="logo">
            <img src="/assets/logo.png" alt="Logo">
            <span>Doctor-Patient Interface</span>
        </div>
    </nav>

    <!-- Forgot Password Form -->
    <div class="forgot-container">
        <form class="forgot-form" id="forgotForm">
            <h2>Forgot Password?</h2>

            <!-- Step 1: Role & Email -->
            <label for="role">Select Your Role:</label>
            <select id="role" required>
                <option value="" disabled selected>Your role</option>
                <option value="patient">Patient</option>
                <option value="doctor">Doctor</option>
            </select>

            <label for="email">Enter Registered Email ID:</label>
            <input type="email" id="email" placeholder="Enter your email" required>

            <!-- Centered Verify Button -->
            <div class="btn-container">
                <button type="button" class="btn" onclick="showOTP()">Verify</button>
            </div>

            <!-- Step 2: OTP Verification (hidden initially) -->
            <div id="otpSection" class="hidden">
                <label for="otp">Enter OTP:</label>
                <input type="text" id="otp" placeholder="Enter OTP">

                <div class="btn-container">
                    <button type="button" class="btn" onclick="showPasswordFields()">Submit OTP</button>
                </div>
            </div>

            <!-- Step 3: Password Fields (hidden initially) -->
            <div id="passwordSection" class="hidden">
                <label for="newPassword">Enter New Password:</label>
                <input type="password" id="newPassword" placeholder="New Password">

                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" placeholder="Confirm Password">

                <div class="btn-container">
                    <button type="submit" class="btn">Reset Password</button>
                </div>
            </div>

        </form>
    </div>

    <script>
        // Function to reveal OTP section
        function showOTP() {
            document.getElementById('otpSection').classList.remove('hidden');
        }

        // Function to reveal Password section and enable scrolling
        function showPasswordFields() {
            document.getElementById('passwordSection').classList.remove('hidden');

            // Enable scrolling after OTP submission
            document.body.style.overflow = "auto";
        }
    </script>

</body>

</html>
