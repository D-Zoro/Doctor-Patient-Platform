            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;
        }

        .navbar-logo:hover h1 {
            color: #a4d2ff; /* Beautiful Dodger Blue */
            text-shadow: 0 4px 12px rgba(30, 144, 255, 0.7); /* Blue Glow */
        }

        .navbar-logo h1 {
            font-size: 24px;
            margin: 0;
            transition: transform 0.3s ease, color 0.3s ease, text-shadow 0.3s ease;
        }

        .navbar-logo img {
            width: 60px;
            height: auto;
        }

        .navbar-links {
            display: flex;
            justify-content: center; /* Centering the links */
            gap: 50px;
            margin-left: -240px;
            margin-bottom: -40px;
        }

        .navbar-links a {
            text-decoration: none;
            color: white;
            font-size: 18px;
            transition: opacity 0.3s, transform 0.3s;
        }

        .navbar-links a:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            color: #a4d2ff; /* Beautiful Dodger Blue */
            text-shadow: 0 4px 12px rgba(30, 144, 255, 0.7); /* Blue Glow */
        }

        .navbar-buttons {
            display: flex;
            gap: 20px;
        }

        .hamburger-menu {
            display: flex;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
            z-index: 1500;
            margin-bottom: -40px;
            margin-right: 20px;
        }

        .hamburger-menu:hover div {
            transform: scale(1.3);
            background-color: #a4d2ff; /* Beautiful Dodger Blue */
            box-shadow: 0 4px 12px rgba(30, 144, 255, 0.7); /* Blue Glow */
        }

        .hamburger-menu div {
            width: 30px;
            height: 3px;
            background-color: white;
            transition: transform 0.3s ease;
        }

        .menu-container {
            position: fixed;
            top: 0;
            right: -300px;
            width: 250px;
            height: 100vh;
            background: white;
            box-shadow: -4px 0 10px rgba(0, 0, 0, 0.2);
            transition: right 0.3s ease;
            z-index: 2000;
            
        }

        .menu-container.open {
            right: 0;
        }

        .menu-header {
            display: flex;
            align-items: center;
            justify-content: right;
            padding: 50px;
            background: rgb(22, 21, 21);
            color: white;
            font-size: 17px;
            font-weight: bold;
            
        }

        .menu-header img {
            width: 40px;
            border-radius: 50%;
            margin-right: 15px;
            justify-items: left;
        }

        .menu-item {
            padding: 15px 20px;
            border-top: 1px solid #ddd;
            color: #333;
            text-decoration: none;
            display: block;
            font-size: 20px;
        }

        .menu-item:hover {
            background: linear-gradient(135deg, #abdded, #92e1e9);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(30, 144, 255, 0.7);
        }

        

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 30px;
            background: linear-gradient(145deg, #1E90FF, #4682B4); /* Gradient Blue */
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
        }

        .btn:hover {
            transform: translateY(-4px) scale(1.05); /* 3D Pop Effect */
            box-shadow: 0 12px 25px rgba(30, 144, 255, 0.4); /* Soft Blue Glow */
            background: linear-gradient(145deg, #4682B4, #1E90FF); /* Reverse Gradient */
